{
  "name": "stylelint-vars-check",
  "version": "0.0.5",
  "description": "利用stylelint检查sass,less变量，并通过vscode stylelint插件，webStorm stylelint插件进行提示",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test node ./rules/index.test.js",
    "publish:patch": "npm version patch && npm publish",
    "publish:preminor": "npm version minor"
  },
  "keywords": [
    "stylelint-plugin",
    "style-vars",
    "stylelint-vars",
    "less-vars",
    "color-vars",
    "sass-vars",
    "font-size-vars"
  ],
  "author": "<chongqiangchen@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/chongqiangchen/stylelint-vars-check.git",
  "dependencies": {
    "css-color-names": "^1.0.1",
    "hex-color-regex": "^1.1.0",
    "is-color": "^1.0.2",
    "lodash": "^4.17.15",
    "node-sass": "^4.14.1",
    "sass-extract": "^2.1.0",
    "string-extract-sass-vars": "^1.2.2",
    "stylelint": "^13.6.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.2",
    "less-vars-to-js": "^1.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.2.1",
    "stylelint-test-rule-tape": "^0.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "**/*.{js}": [
      "prettier --write",
      "git add"
    ]
  }
}
